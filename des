from Crypto.Cipher import DES
from Crypto.Util.Padding import pad, unpad

# --- User Input ---
key_input = input("Enter an 8-character key: ")
if len(key_input) != 8:
    raise ValueError("Key must be exactly 8 characters long!")

key = key_input.encode()
plaintext = input("Enter a message to encrypt: ").encode()

# --- Encryption ---
cipher = DES.new(key, DES.MODE_ECB)  # ECB mode (simplest)
ciphertext = cipher.encrypt(pad(plaintext, DES.block_size))
print("\nðŸ”’ Encrypted (bytes):", ciphertext)

# --- Decryption ---
decipher = DES.new(key, DES.MODE_ECB)
decrypted = unpad(decipher.decrypt(ciphertext), DES.block_size)
print("ðŸ”“ Decrypted message:", decrypted.decode())
